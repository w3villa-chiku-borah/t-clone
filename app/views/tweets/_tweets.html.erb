
<% @tweets.each do |tweet| %>
  <div class="box">
   <div class= "main-body">
             <article class="media">
                    <div class= "media-left">
                        <figure class="image is-64x64">
                            <img src="https://bulma.io/images/placeholders/64x64.png">
                        </figure>   
                   </div>
                <div class="media-contant">
                   <div class="content">
                      <strong> <%= tweet.user.username %> </strong> <br/>
                      <small> @<%= tweet.user.name%> </small> <br/>
                      <p><%= tweet.body %>
                     
                    </div>

                   <nav class="level">

                       <div class="level-left is mobile">
                          <%= link_to tweet, class: "level-item" do %>
                             <span class="icon"> <i class="fa-solid fa-eye"></i></span>
                          <% end %>
                        </div>
                   
                       <div class="level-left is mobile">
                          <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
                             <span class="icon"> <i class="fa-solid fa-pen-clip"></i></span>
                          <% end %>
                        </div>

                         <div class="level-left is mobile">
                            <%# <%= link_to tweet, data: { urbo_confirm: "Are you sure?" },method: :delete, do %> 
                          <%= button_to tweet, data: { confirm: 'Are you sure you want to delete this tweet?' } ,method: :delete , class: "border-none" do %>
                             <span class="icon"><i class="fa-solid fa-trash"></i></span>
                          <% end %>
                        </div>
                      
                    </nav>

                </div>

             </article>
             <div lcass="for-time">
                <small>Created <%= time_ago_in_words(tweet.created_at) %>
                </small>
                <% if tweet.updated_at != tweet.created_at %>
                 <small>edited <%= time_ago_in_words(tweet.updated_at) %> ago </small>
                 <% end %>
            </div>

    </div> 
   </div> 
<% end %>
   